{
	"name": "@tactical-voice/desktop",
	"version": "0.1.1",
	"private": true,
	"main": "electron/main.js",
	"author": "Tactical Voice Team",
	"description": "Team communication app for competitive gaming",
	"scripts": {
		"start": "npm run electron:dev",
		"build:angular": "ng build --configuration development",
		"build:angular:prod": "ng build --configuration production",
		"build:electron": "tsc -p electron/tsconfig.json",
		"electron": "electron .",
		"electron:dev": "concurrently -k \"ng serve\" \"wait-on http://localhost:4200 && npm run build:electron && electron .\"",
		"build": "npm run build:angular:prod && npm run build:electron",
		"pack": "npm run build && electron-builder --dir",
		"dist": "npm run build && electron-builder",
		"dist:win": "npm run build && electron-builder --win",
		"dist:prod": "node scripts/build-prod.js",
		"dist:mac": "npm run build && electron-builder --mac",
		"dist:linux": "npm run build && electron-builder --linux",
		"publish": "npm run build && electron-builder --win --publish always",
		"publish:prod": "node scripts/build-prod.js publish",
		"test": "jest --config jest.config.js",
		"test:watch": "jest --watch --config jest.config.js"
	},
	"build": {
		"appId": "com.tacticalvoice.app",
		"productName": "Tactical Voice",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"electron/**/*.js",
			"package.json"
		],
		"publish": {
			"provider": "github",
			"owner": "notime1999",
			"repo": "callstack-desktop"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"artifactName": "TacticalVoice-Setup-${version}.exe"
		},
		"mac": {
			"target": [
				"dmg"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			]
		}
	},
	"dependencies": {
		"@angular/animations": "^17.0.0",
		"@angular/cdk": "^17.0.0",
		"@angular/common": "^17.0.0",
		"@angular/compiler": "^17.0.0",
		"@angular/core": "^17.0.0",
		"@angular/forms": "^17.0.0",
		"@angular/platform-browser": "^17.0.0",
		"@angular/platform-browser-dynamic": "^17.0.0",
		"@angular/router": "^17.0.0",
		"buffer": "^6.0.3",
		"electron-updater": "^6.7.3",
		"events": "^3.3.0",
		"process": "^0.11.10",
		"rxjs": "~7.8.0",
		"simple-peer": "^9.11.1",
		"socket.io-client": "^4.7.2",
		"yargs": "^17.7.2",
		"zone.js": "~0.14.0"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "^17.0.2",
		"@angular-devkit/build-angular": "^17.0.0",
		"@angular/cli": "^17.0.0",
		"@angular/compiler-cli": "^17.0.0",
		"@babel/runtime": "^7.26.10",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.0",
		"@types/simple-peer": "^9.11.8",
		"concurrently": "^8.2.0",
		"electron": "^28.0.0",
		"electron-builder": "^26.4.0",
		"jest": "^29.7.0",
		"jest-preset-angular": "^14.0.3",
		"typescript": "~5.2.0",
		"wait-on": "^7.2.0"
	}
}
